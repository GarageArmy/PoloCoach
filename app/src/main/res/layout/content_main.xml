                android:text="Name 4"
                android:ems="10"
                android:id="@+id/editText4" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name 5"
                android:ems="10"
                android:id="@+id/editText5" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name 6"
                android:ems="10"
                android:id="@+id/editText6" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
